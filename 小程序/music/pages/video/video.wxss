/* pages/video.wxss */
.videoContainer {
    margin-top: 16rpx;
    height: calc(100vh - 152rpx);
}
.navItem {
    margin: 20rpx 0;
    padding: 0 30rpx;
    font-size: 28rpx;
    display: inline;
}
.navContent {
 padding: 10rpx 0;
}
.active {
    border-bottom: 1px solid red;
}
.navScroll {
    display: flex;
    white-space: nowrap;
    height: 80rpx;
}

.videoItem {
    padding: 0 3%;
}

.videoItem video {
    width: 100%;
    height: 420rpx;
}
.videoItem image {
    width: 100%;
    height: 420rpx;
}

.videoText {
    margin: 16rpx 0;
}